{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-O3",
                "-I/usr/include/mysql",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.so",
                "-shared",
                "${file}",
                "-fPIC"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}